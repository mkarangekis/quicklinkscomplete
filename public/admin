    <script>
        let adminData = {
            users: [],
            urls: [],
            stats: {}
        };

        // Load admin data
        async function loadAdminData() {
            try {
                // Load stats
                const statsRes = await fetch('/api/admin/stats');
                const statsData = await statsRes.json();
                
                if (statsData.success) {
                    adminData.stats = statsData.data;
                    updateStats();
                }

                // Load users
                const usersRes = await fetch('/api/admin/users');
                const usersData = await usersRes.json();
                
                if (usersData.success) {
                    adminData.users = usersData.data;
                    renderUsers();
                }

                // Load URLs
                const urlsRes = await fetch('/api/admin/urls');
                const urlsData = await urlsRes.json();
                
                if (urlsData.success) {
                    adminData.urls = urlsData.data;
                    renderUrls();
                }

                // Load user info
                const meRes = await fetch('/api/auth/me');
                const meData = await meRes.json();
                document.getElementById('adminEmail').textContent = meData.email;

            } catch (error) {
                console.error('Error loading data:', error);
                window.location.href = '/login';
            }
        }

        // Update stats
        function updateStats() {
            const stats = adminData.stats;
            
            document.getElementById('mrr').textContent = `$${stats.mrr || 0}`;
            document.getElementById('mrrDetails').textContent = 
                `${stats.paidUsers || 0} paid users √ó $9/mo`;
            
            document.getElementById('totalUsers').textContent = stats.totalUsers || 0;
            document.getElementById('newUsers').textContent = `+${stats.newUsersToday || 0} today`;
            
            document.getElementById('totalUrls').textContent = stats.totalUrls || 0;
            
            document.getElementById('totalClicks').textContent = stats.totalClicks || 0;
            const avgClicks = stats.totalUrls > 0 ? Math.round(stats.totalClicks / stats.totalUrls) : 0;
            document.getElementById('avgClickRate').textContent = `${avgClicks} avg per URL`;
            
            const convRate = stats.totalUsers > 0 ? 
                Math.round((stats.paidUsers / stats.totalUsers) * 100) : 0;
            document.getElementById('conversionRate').textContent = `${convRate}%`;
            
            const freeUsers = stats.totalUsers - stats.paidUsers;
            const projectedNew = Math.floor(freeUsers * 0.1);
            const projected = (stats.paidUsers + projectedNew) * 9 * 12;
            document.getElementById('projectedMrr').textContent = `$${Math.round(projected / 12)}`;

            // Revenue tab
            document.getElementById('revFreeUsers').textContent = freeUsers;
            document.getElementById('revProUsers').textContent = stats.paidUsers;
            document.getElementById('revCurrentMrr').textContent = `$${stats.mrr}`;
            document.getElementById('revArr').textContent = `$${stats.mrr * 12}`;
            
            document.getElementById('growthOpportunity').innerHTML = `
                You have <strong>${freeUsers} free users</strong>. <br><br>
                If you convert <strong>10%</strong> (industry average), that's <strong>${projectedNew} new Pro users</strong> = 
                <strong style="font-size: 1.3em;">+$${projectedNew * 9}/month</strong>!<br><br>
                Total MRR would be: <strong style="font-size: 1.5em; color: #10b981;">$${stats.mrr + (projectedNew * 9)}/month</strong>
            `;
        }

        // Render users table
        function renderUsers() {
            const tbody = document.querySelector('#usersTable tbody');
            
            if (adminData.users.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" style="text-align: center;">No users yet</td></tr>';
                return;
            }

            tbody.innerHTML = adminData.users.map(user => `
                <tr>
                    <td>${user.email}</td>
                    <td>${user.name || '-'}</td>
                    <td><span class="badge badge-${user.plan}">${user.plan.toUpperCase()}</span></td>
                    <td>${user.total_urls || 0}</td>
                    <td>${user.total_clicks || 0}</td>
                    <td>${new Date(user.created_at).toLocaleDateString()}</td>
                    <td>${user.last_login ? new Date(user.last_login).toLocaleDateString() : 'Never'}</td>
                    <td>
                        ${user.role !== 'admin' ? `
                            <select class="action-btn" onchange="changePlan(${user.id}, this.value)">
                                <option value="${user.plan}" selected>${user.plan}</option>
                                <option value="free">Free</option>
                                <option value="pro">Pro</option>
                                <option value="business">Business</option>
                            </select>
                        ` : '<span class="badge badge-admin">ADMIN</span>'}
                    </td>
                </tr>
            `).join('');
        }

        // Render URLs table
        function renderUrls() {
            const tbody = document.querySelector('#urlsTable tbody');
            
            if (adminData.urls.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" style="text-align: center;">No URLs yet</td></tr>';
                return;
            }

            tbody.innerHTML = adminData.urls.map(url => `
                <tr>
                    <td><code>${url.shortCode}</code></td>
                    <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">${url.longUrl}</td>
                    <td>${url.userEmail}</td>
                    <td><strong>${url.clicks}</strong></td>
                    <td>${new Date(url.created).toLocaleDateString()}</td>
                </tr>
            `).join('');
        }

        // Change user plan
        async function changePlan(userId, newPlan) {
            if (!confirm(`Change user plan to ${newPlan}?`)) return;

            try {
                const response = await fetch(`/api/admin/users/${userId}/plan`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ plan: newPlan })
                });

                const data = await response.json();

                if (data.success) {
                    alert('Plan updated successfully!');
                    loadAdminData();
                }
            } catch (error) {
                alert('Error updating plan');
            }
        }

        // Switch tabs
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.getElementById(tabName + '-tab').classList.add('active');
            event.target.classList.add('active');
        }

        // Logout
        async function logout() {
            await fetch('/api/auth/logout', { method: 'POST' });
            window.location.href = '/';
        }

        // Initialize
        loadAdminData();

        // Auto-refresh every 30 seconds
        setInterval(loadAdminData, 30000);
    </script>
</body>
</html>
