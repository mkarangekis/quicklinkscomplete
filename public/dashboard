<body>
    <div class="navbar">
        <h1>‚ö° QuickLinks</h1>
        <div class="nav-right">
            <span id="userEmail" style="color: #6b7280;"></span>
            <span id="trialBadge" class="trial-badge"></span>
            <button class="btn btn-secondary" onclick="logout()">Logout</button>
        </div>
    </div>

    <div class="container">
        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <h3 id="totalLinks">0</h3>
                <p>Total Links</p>
            </div>
            <div class="stat-card">
                <h3 id="totalClicks">0</h3>
                <p>Total Clicks</p>
            </div>
            <div class="stat-card">
                <h3 id="avgClicks">0</h3>
                <p>Avg Clicks/Link</p>
            </div>
            <div class="stat-card">
                <h3 id="planName">Free</h3>
                <p>Current Plan</p>
            </div>
        </div>

        <!-- Create Link -->
        <div class="card">
            <h2>üîó Create Short Link</h2>
            <div class="input-group">
                <input type="url" id="urlInput" placeholder="Enter your long URL...">
                <button class="btn btn-primary" onclick="createLink()">Shorten</button>
            </div>
        </div>

        <!-- Links List -->
        <div class="card">
            <h2>üìä Your Links</h2>
            <div id="urlList" class="url-list"></div>
        </div>
    </div>

    <div id="toast" class="toast"></div>

    <script>
        let userData = null;
        let urls = [];

        // Load user data
        async function loadUser() {
            try {
                const response = await fetch('/api/auth/me');
                const data = await response.json();
                
                if (data.id) {
                    userData = data;
                    document.getElementById('userEmail').textContent = data.email;
                    document.getElementById('planName').textContent = data.plan.toUpperCase();
                    
                    if (data.trial && !data.trial.expired) {
                        document.getElementById('trialBadge').textContent = 
                            `üéâ ${data.trial.daysLeft} days left in trial`;
                    } else if (data.trial && data.trial.expired && data.plan === 'free') {
                        document.getElementById('trialBadge').textContent = '‚ö†Ô∏è Trial expired - Upgrade';
                        document.getElementById('trialBadge').style.background = '#fee2e2';
                        document.getElementById('trialBadge').style.color = '#991b1b';
                    }
                    
                    loadLinks();
                } else {
                    window.location.href = '/login';
                }
            } catch (error) {
                window.location.href = '/login';
            }
        }

        // Load links
        async function loadLinks() {
            try {
                const response = await fetch('/api/urls');
                const data = await response.json();
                
                if (data.success) {
                    urls = data.data;
                    updateStats();
                    renderLinks();
                }
            } catch (error) {
                showToast('Error loading links');
            }
        }

        // Update stats
        function updateStats() {
            document.getElementById('totalLinks').textContent = urls.length;
            const totalClicks = urls.reduce((sum, url) => sum + url.clicks, 0);
            document.getElementById('totalClicks').textContent = totalClicks;
            const avg = urls.length > 0 ? Math.round(totalClicks / urls.length) : 0;
            document.getElementById('avgClicks').textContent = avg;
        }

        // Render links
        function renderLinks() {
            const list = document.getElementById('urlList');
            
            if (urls.length === 0) {
                list.innerHTML = `
                    <div class="empty-state">
                        <h3>No links yet</h3>
                        <p>Create your first short link above!</p>
                    </div>
                `;
                return;
            }

            list.innerHTML = urls.map(url => `
                <div class="url-item">
                    <div class="url-info">
                        <div class="original">üåê ${url.longUrl}</div>
                        <div class="short">üîó ${url.shortUrl}</div>
                    </div>
                    <div class="url-stats">
                        <div>
                            <strong>${url.clicks}</strong>
                            <span>Clicks</span>
                        </div>
                        <div>
                            <strong>${url.uniqueVisitors || 0}</strong>
                            <span>Unique</span>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-primary" onclick="copyLink('${url.shortUrl}')">Copy</button>
                        <button class="btn btn-secondary" onclick="deleteLink(${url.id})">Delete</button>
                    </div>
                </div>
            `).join('');
        }

        // Create link
        async function createLink() {
            const input = document.getElementById('urlInput');
            const longUrl = input.value.trim();

            if (!longUrl) {
                showToast('Please enter a URL');
                return;
            }

            try {
                const response = await fetch('/api/shorten', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ longUrl })
                });

                const data = await response.json();

                if (data.success) {
                    input.value = '';
                    await loadLinks();
                    showToast('Link created successfully! ‚úÖ');
                } else {
                    showToast(data.error || 'Error creating link');
                }
            } catch (error) {
                showToast('Network error');
            }
        }

        // Copy link
        function copyLink(url) {
            navigator.clipboard.writeText(url);
            showToast('Link copied! üìã');
        }

        // Delete link
        async function deleteLink(id) {
            if (!confirm('Delete this link?')) return;

            try {
                const response = await fetch(`/api/urls/${id}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (data.success) {
                    await loadLinks();
                    showToast('Link deleted ‚úÖ');
                } else {
                    showToast('Error deleting link');
                }
            } catch (error) {
                showToast('Network error');
            }
        }

        // Logout
        async function logout() {
            await fetch('/api/auth/logout', { method: 'POST' });
            window.location.href = '/';
        }

        // Show toast
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // Initialize
        loadUser();

        // Auto-refresh clicks
        setInterval(loadLinks, 10000);
    </script>
</body>
</html>
